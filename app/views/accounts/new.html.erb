<h1>Create Account</h1>

<%= form_for @account do |f| %>
    <% if @account.errors.any? %>
        <div class="error_messages">
          <h2>Form is invalid</h2>
          <ul>
            <% for message in @account.errors.full_messages %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>

    <p class="button"><%= f.submit %></p>
<% end %>
>